{
  "name": "proto-sync-monorepo",
  "version": "0.0.1",
  "description": "Proto Sync - Full Stack Application",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm -r start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,js,json,md,astro}\"",
    "docker:dev": "./scripts/docker.sh dev",
    "docker:prod": "./scripts/docker.sh prod",
    "docker:stop": "./scripts/docker.sh stop",
    "docker:clean": "./scripts/docker.sh clean",
    "docker:build": "./scripts/docker.sh build",
    "docker:logs": "./scripts/docker.sh logs",
    "docker:mongo": "./scripts/docker.sh mongo",
    "docker:status": "./scripts/docker.sh status"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.12.2",
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
