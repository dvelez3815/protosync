---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Proto Sync - Full Stack Application with NestJS and Astro" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <header class="bg-white shadow-sm border-b sticky top-0 z-50">
            <nav class="container mx-auto px-4 py-4">
                <div class="flex justify-between items-center">
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                            <span class="text-white font-bold text-sm">PS</span>
                        </div>
                        <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            Proto Sync
                        </h1>
                    </div>
                    <div class="flex items-center space-x-6">
                        <a href="/" class="text-gray-600 hover:text-blue-600 transition-colors font-medium">Home</a>
                        <a href="http://localhost:3000/api" target="_blank" class="text-gray-600 hover:text-blue-600 transition-colors font-medium">API Docs</a>
                        <a href="http://localhost:8081" target="_blank" class="text-gray-600 hover:text-blue-600 transition-colors font-medium">Database</a>
                        <div class="flex items-center space-x-2 bg-green-100 px-3 py-1 rounded-full">
                            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                            <span class="text-green-700 text-sm font-medium">Online</span>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        
        <slot />
        
        <footer class="bg-gray-800 text-white py-12 mt-20">
            <div class="container mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-8">
                    <div>
                        <div class="flex items-center space-x-2 mb-4">
                            <div class="w-8 h-8 bg-gradient-to-r from-blue-400 to-purple-400 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-sm">PS</span>
                            </div>
                            <h3 class="text-xl font-bold">Proto Sync</h3>
                        </div>
                        <p class="text-gray-300">
                            Modern full-stack application built with cutting-edge technologies.
                        </p>
                    </div>
                    
                    <div>
                        <h4 class="text-lg font-semibold mb-4">Technology Stack</h4>
                        <ul class="space-y-2 text-gray-300">
                            <li>• NestJS - Backend API</li>
                            <li>• Astro - Frontend Framework</li>
                            <li>• MongoDB - Database</li>
                            <li>• Docker - Containerization</li>
                        </ul>
                    </div>
                    
                    <div>
                        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                        <ul class="space-y-2">
                            <li><a href="http://localhost:3000/health" target="_blank" class="text-gray-300 hover:text-white transition-colors">Health Check</a></li>
                            <li><a href="http://localhost:3000/api" target="_blank" class="text-gray-300 hover:text-white transition-colors">API Documentation</a></li>
                            <li><a href="http://localhost:8081" target="_blank" class="text-gray-300 hover:text-white transition-colors">MongoDB Express</a></li>
                        </ul>
                    </div>
                </div>
                
                <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                    <p class="text-gray-300">
                        &copy; 2025 Proto Sync. Built with ❤️ using NestJS and Astro in a monorepo architecture.
                    </p>
                </div>
            </div>
        </footer>
    </body>
</html>
